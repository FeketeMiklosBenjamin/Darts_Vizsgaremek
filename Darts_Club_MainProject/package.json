{
  "name": "darts-club-mainproject",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "test:unit": "cypress run --component",
    "test:unit:dev": "cypress open --component",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "setup-and-start": "npm run run-mongo-localhost && npm run create-db && npm run start-project && npm run start-tests",
    "run-mongo-localhost": "start cmd /k \"start_mongodb_localhost.bat\"",
    "create-db": "mongodump --uri=\"mongodb+srv://m001-student:m001-student@cluster0.gcoqn.mongodb.net/darts_database_test\" && mongorestore --uri=\"mongodb://localhost:27017\" --dir=\"./dump\"",
    "start-backend": "start cmd /k \"cd.. && cd Vizsga_Backend\\Vizsga_Backend && set ASPNETCORE_ENVIRONMENT=Development && dotnet run\"",
    "start-frontend": "start cmd /k \"npm install && npm run dev\"",
    "start-tests": "start cmd /k \"npx cypress open\"",
    "start-project": "npm run start-backend && npm run start-frontend"
  },
  "dependencies": {
    "@chenfengyuan/vue-countdown": "^2.1.3",
    "axios": "^1.8.1",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "pinia": "^2.3.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/bootstrap": "^5.2.10",
    "@types/node": "^22.10.7",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.3.0",
    "@vue/tsconfig": "^0.7.0",
    "cypress": "^14.0.0",
    "eslint": "^9.18.0",
    "eslint-plugin-cypress": "^4.1.0",
    "eslint-plugin-vue": "^9.32.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.4.2",
    "start-server-and-test": "^2.0.10",
    "typescript": "~5.7.3",
    "vite": "^6.0.11",
    "vite-plugin-vue-devtools": "^7.7.0",
    "vue-tsc": "^2.2.0"
  }
}
