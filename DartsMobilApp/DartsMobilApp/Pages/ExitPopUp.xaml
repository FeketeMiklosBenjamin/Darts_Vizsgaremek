<?xml version="1.0" encoding="utf-8" ?>
<tool:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tool="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="DartsMobilApp.Pages.ExitPopUp"
            Color="Black">
    <Frame CornerRadius="25">
        <VerticalStackLayout>
            <Label Text="Biztos ki szeretnél lépni a meccsből?" TextColor="{x:StaticResource Primary}" FontSize="Header" HorizontalTextAlignment="Center"/>
            <HorizontalStackLayout Spacing="10" Margin="5" HorizontalOptions="Center">
                <Button Text="Igen" BackgroundColor="{x:StaticResource Secondary}" WidthRequest="150" HeightRequest="38"/>
                <Button Text="Nem" BackgroundColor="Red" WidthRequest="150" HeightRequest="38"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</tool:Popup>