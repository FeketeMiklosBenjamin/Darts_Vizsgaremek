<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DartsMobilApp.Pages.MainPage"
             Title="MainPage">
    <Grid RowDefinitions="*,*,*" ColumnDefinitions="*,*">
        <Label Text="FÅ‘ oldal" FontAttributes="Bold" FontSize="Large"/>
        <Button Text="Versenyek" WidthRequest="150" HeightRequest="150" Grid.Row="1"  ImageSource="Images/tr_icon.png" />
        <Button  WidthRequest="150" HeightRequest="150" Grid.Row="1" Grid.Column="1"  Command="{Binding GoToCounterCommand}">
