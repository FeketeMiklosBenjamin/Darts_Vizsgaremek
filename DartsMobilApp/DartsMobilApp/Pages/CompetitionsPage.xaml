<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tools="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="DartsMobilApp.Pages.CompetitionsPage"
             Title="Versenyeink"
             Shell.TabBarBackgroundColor="Transparent"
             Shell.NavBarIsVisible="False"
             BackgroundImageSource="ally_pally.jpg"
             >
  
    <ContentPage.Behaviors>
        <tools:StatusBarBehavior StatusBarColor="Transparent"/>
    </ContentPage.Behaviors>

    <Grid RowDefinitions="*,5*,*" >
        <Label Text="Versenyeink" FontSize="20" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold"/>
        <CollectionView Grid.Row="1" ItemsSource="{Binding Tournaments}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border BackgroundColor="Black" WidthRequest="300" HeightRequest="100" Margin="0,0,0,20">
                            <VerticalStackLayout Margin="0,0,3,0" VerticalOptions="Center" HorizontalOptions="Center">
                                <Label Text="{Binding Name}" HorizontalOptions="Center" Margin="0,0,0,20" FontAttributes="Bold" FontSize="18"/>
                            <HorizontalStackLayout Spacing="100" Margin="0,0,0,10">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Level}"/>
                                    <Label Text="{Binding Time, StringFormat='{0:yyyy.MM.dd}'}"/>
                                </VerticalStackLayout>
                                <Button VerticalOptions="Center" Text="Lejátszás" BackgroundColor="Green" WidthRequest="100" HeightRequest="40" Padding="5" />
                            </HorizontalStackLayout>
                                
                            </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <HorizontalStackLayout>
            
        </HorizontalStackLayout>
    </Grid>
</ContentPage>