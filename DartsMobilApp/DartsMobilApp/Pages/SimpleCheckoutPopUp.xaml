<?xml version="1.0" encoding="utf-8" ?>
<tool:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tool="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="DartsMobilApp.Pages.SimpleCheckoutPopUp"
             Color="Black">
    <Frame>
        <VerticalStackLayout>
            <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="*,*">
                <VerticalStackLayout>
                    <Label Text="Hány nyílat dobtál el a duplára?" TextColor="{x:StaticResource Primary}" HorizontalTextAlignment="Center" HorizontalOptions="Center"/>
                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Button Text="0" BackgroundColor="White"/>
                        <Button Text="1" BackgroundColor="White" Grid.Column="1"/>
                        <Button Text="2" BackgroundColor="White" Grid.Column="2"/>
                        <Button Text="3" BackgroundColor="White" Grid.Column="3"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
                <Button Text="Elküldés" BackgroundColor="{x:StaticResource Primary}" TextColor="Black" Grid.Row="1" Grid.ColumnSpan="3" HorizontalOptions="Center"/>
            </Grid>
        </VerticalStackLayout>
    </Frame>
</tool:Popup>