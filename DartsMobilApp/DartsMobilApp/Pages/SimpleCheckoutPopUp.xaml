<?xml version="1.0" encoding="utf-8" ?>
<tool:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tool="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="DartsMobilApp.Pages.SimpleCheckoutPopUp"
             Color="Transparent">
    <Frame>
        <VerticalStackLayout BackgroundColor="Black" WidthRequest="300" Spacing="20">
            <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="*,*" HorizontalOptions="Center">
                <VerticalStackLayout Grid.ColumnSpan="3" >
                    <Label Text="Hány nyílat dobtál el a duplára?" FontSize="25" TextColor="{x:StaticResource Primary}" FontAttributes="Bold" HorizontalTextAlignment="Center" HorizontalOptions="Center"/>
                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Margin="20">
                        <Button Text="0" BackgroundColor="White" TextColor="Black" FontAttributes="Bold" FontSize="30" Command="{Binding SelectDartsCommand}" CommandParameter="0"/>
                        <Button Text="1" BackgroundColor="White" TextColor="Black" FontAttributes="Bold" FontSize="30" Command="{Binding SelectDartsCommand}" CommandParameter="1"/>
                        <Button Text="2" BackgroundColor="White" TextColor="Black" FontAttributes="Bold" FontSize="30" Command="{Binding SelectDartsCommand}" CommandParameter="2"/>
                        <Button Text="3" BackgroundColor="White" TextColor="Black" FontAttributes="Bold" FontSize="30" Command="{Binding SelectDartsCommand}" CommandParameter="3"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Grid>
        </VerticalStackLayout>
    </Frame>
</tool:Popup>