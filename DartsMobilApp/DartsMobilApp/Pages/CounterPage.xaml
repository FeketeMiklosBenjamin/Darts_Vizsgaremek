<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DartsMobilApp.Pages.CounterPage"
             Title="CounterPage">

    <Grid RowDefinitions="*,2*,*,4*">
        <HorizontalStackLayout Grid.Row="1"  VerticalOptions="Center">
            <Label x:Name="player1_points_Lbl" Text="501" FontSize="Large" FontAttributes="Bold" Margin="5,5,5,5" WidthRequest="200"/>
            <Label x:Name="player2_points_Lbl" Text="501" FontSize="Large" FontAttributes="Bold" WidthRequest="200" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Grid.Row="2" Margin="10,10,10,10">
            <Label Text="Pontszám" FontSize="Micro"/>
            <Entry x:Name="Points_ENT" WidthRequest="200" Placeholder="Kérem a dobott értéket!" FontSize="Medium" PlaceholderColor="Red"/>
            <Button Text="Küldés" WidthRequest="100" BackgroundColor="{x:StaticResource SubmitPointBtn}"/>
        </HorizontalStackLayout>
        <Grid RowDefinitions="*,*,*,*" ColumnDefinitions="*,*,*" Grid.Row="3">
            <Button Text="1" WidthRequest="100" Grid.Row="0"/>
            <Button Text="2" WidthRequest="100" Grid.Row="0" Grid.Column="1"/>
            <Button Text="3" WidthRequest="100" Grid.Row="0" Grid.Column="2"/>
            <Button Text="4" WidthRequest="100" Grid.Row="1"/>
            <Button Text="5" WidthRequest="100" Grid.Row="1" Grid.Column="1"/>
            <Button Text="6" WidthRequest="100" Grid.Row="1" Grid.Column="2"/>
            <Button Text="7" WidthRequest="100" Grid.Row="2"/>
            <Button Text="8" WidthRequest="100" Grid.Row="2" Grid.Column="1"/>
            <Button Text="9" WidthRequest="100" Grid.Row="2" Grid.Column="2"/>
            <Button Text="" WidthRequest="100" Grid.Row="3"/>
            <Button Text="0" WidthRequest="100" Grid.Row="3" Grid.Column="1"/>
        </Grid>
    </Grid>
</ContentPage>