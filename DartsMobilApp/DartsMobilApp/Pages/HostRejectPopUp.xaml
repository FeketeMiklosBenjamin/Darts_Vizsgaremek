<?xml version="1.0" encoding="utf-8" ?>
<tool:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tool="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="DartsMobilApp.Pages.HostRejectPopUp"
             Color="Transparent">
    <Frame BackgroundColor="Black" CornerRadius="25">
        <VerticalStackLayout>
            <Label Text="A meccs létrehozója elutasította a kérést!" TextColor="{x:StaticResource Primary}" FontSize="Body" FontAttributes="Bold" Margin="10"/>
            <Button Text="OK" BackgroundColor="{x:StaticResource Primary}" WidthRequest="150" HeightRequest="38" Clicked="Button_Clicked" Margin="10"/>
        </VerticalStackLayout>
    </Frame>
</tool:Popup>